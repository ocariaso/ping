{
  "compilerOptions": {
    "target": "es2022",
    "module": "node16",
    "moduleResolution": "node16",
    "outDir": "./build",
    "rootDir": "./",
    "tsBuildInfoFile": "./build/.tsbuildinfo",
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "#controllers/*": [
        "./app/controllers/*"
      ],
      "#exceptions/*": [
        "./app/exceptions/*"
      ],
      "#mails/*": [
        "./app/mails/*"
      ],
      "#middleware/*": [
        "./app/middleware/*"
      ],
      "#models/*": [
        "./app/models/*"
      ],
      "#policies/*": [
        "./app/policies/*"
      ],
      "#schemas/*": [
        "./app/schemas/*"
      ],
      "#services/*": [
        "./app/services/*"
      ],
      "#validators/*": [
        "./app/validators/*"
      ],
      "#listeners/*": [
        "./app/listeners/*"
      ],
      "#events/*": [
        "./app/events/*"
      ],
      "#database/*": [
        "./database/*"
      ],
      "#start/*": [
        "./start/*"
      ],
      "#tests/*": [
        "./tests/*"
      ],
      "/*": [
        "./*"
      ]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": [
      "es2022",
      "dom"
    ],
    "esModuleInterop": true,
    "noEmit": true
  },
  "include": [
    "**/*",
    "start/*",
    "database/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}